---
import type { Project } from "../data/projectInfo";

interface Prop {
  project: Project;
}

const { project } = Astro.props;
---

<article class="project-card">
  <div class="project-image carousel">
    {project.images.map(img => (<img src={img} />))}
  </div>

  <h2 class="project-title">{project.title}</h2>
  <p class="project-description">{project.description}</p>

  <div class="tags">
    {project.tags.map(tag => <span class="tag">{tag}</span>)}
  </div>

  <div class="buttons">
    {project.github && (<a href={project.github} target="_blank" class="btn btn-code">Code</a>)}
    {project.demo && (<a href={project.demo} target="_blank" class="btn btn-demo">Demo</a>)}
  </div>
</article>


<style>

.project-card {
  border-radius: 24px;
  padding: 1.5rem;
  background: rgba(255, 255, 255, 0.5); // white bacground with 50 opacity
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.07);
  display: flex;
  flex-direction: column;
  gap: 1rem;
  transition: transform 0.2s ease, box-shadow 0.3s ease;
}

.project-card:hover {
  transform: translateY(-5px); // moves up a bit
  box-shadow: 0 15px 45px rgba(0, 0, 0, 0.12);
}

.project-image {
  width: 100%;
  height: 180px;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.project-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.carousel {
  display: flex;
  overflow-x: auto;
  gap: 0.5rem;
  scroll-snap-type: x mandatory;
}

.carousel img {
  flex-shrink: 0;
  width: 100%;
  border-radius: 12px;
  scroll-snap-align: center;
  object-fit: cover;
}

.project-title {
  font-size: 1.2rem;
  font-weight: 300;
  font-family: "Verdana";
  margin-bottom: 0rem;
}

.project-description {
  font-size: 0.95rem;
  color: #000000e5;
  line-height: 1.6;
  margin-bottom: 1rem;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  padding: 0.3rem 0.7rem;
  border-radius: 12px;
  background: rgba(38, 198, 220, 0.33);
  font-size: 0.75rem;
  font-weight: 500;
  color: #000000ff;
}

.buttons {
  display: flex;
  gap: 0.75rem;
}

.btn {
  flex: 1;
  text-align: center;
  padding: 0.55rem 0;
  border-radius: 20px;
  border: 1.8px solid rgba(150, 150, 200, 0.4);
  background: white;
  color: #3a4080;
  text-decoration: none; // gets rid of link underline
  font-weight: 500;
  transition: 0.2s ease;
}

.btn-code{
  background: rgba(240, 226, 255, 0.8);
  border-color: #a3a6ffff;
  color: #2b3eaaff;
}

.btn-code:hover {
  background: rgba(235, 213, 255, 1);
  border-color: #8c90ffff;
  color: #00189fff;
}

.btn-demo {
  background: rgba(230, 255, 240, 0.8);
  border-color: #7ae2a7;
  color: #1a8e4a;
}

.btn-demo:hover {
  background: rgba(200, 255, 225, 1);
  border-color: #4fdc87;
  color: #14793f;
}
</style>